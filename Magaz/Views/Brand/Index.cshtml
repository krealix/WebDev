@model IEnumerable<Magaz.Models.Brand>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Brand List</h2>
        </div>
        <div class="col-6 text-right">
            @if (User.IsInRole("admin"))
            {
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">Create new Brand</a>
            }
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <div class=" container overflow-hidden">
            <div class="row">
                @foreach (var obj in Model)
                {
                    <div class="col-6">
                        <div class="card p-3  my-2 border bg-light">
                            <h3>@obj.BrandName</h3>
                            <div class="w-100 btn-group" role="group">
                                @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                                {
                                    <a asp-controller="Brand" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1 ">Update</a>
                                }
                                @if (User.IsInRole("admin"))
                                {
                                    <a asp-controller="Brand" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>