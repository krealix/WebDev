@model IEnumerable<Magaz.Models.Country>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Country List</h2>
        </div>
        <div class="col-6 text-right">
            @if (User.IsInRole("admin"))
            {
            <a asp-controller="Country" asp-action="Create" class="btn btn-primary">Create new Country</a>
            }
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Country
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="35%">@obj.CountryName</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                                {
                                    <a asp-controller="Country" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1 ">Update</a>
                                }
                                @if (User.IsInRole("admin"))
                                {
                                    <a asp-controller="Country" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>